{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/content-manager/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/content-manager/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/content-manager",
  "projects": {
    "content-manager": {
      "type": "application",
      "root": "apps/content-manager",
      "entryFile": "main",
      "sourceRoot": "apps/content-manager/src",
      "compilerOptions": {
        "tsConfigPath": "apps/content-manager/tsconfig.app.json"
      }
    },
    "core": {
      "type": "application",
      "root": "apps/core",
      "entryFile": "main",
      "sourceRoot": "apps/core/src",
      "compilerOptions": {
        "tsConfigPath": "apps/core/tsconfig.app.json"
      }
    }
  }
}